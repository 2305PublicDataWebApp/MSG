<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WorkingTimeMapper">
	<resultMap type="WorkingTime" id="workingTimeResultMap">
		<id property="dateWithId" column="DATEWITHID" />
		<result property="projectNo" column="PROJECT_NO" />
		<result property="startWork" column="START_WORK" />	
		<result property="endWork" column="END_WORK" />	
		<result property="userId" column="USER_ID" />	
	</resultMap>
	
	<insert id="addStartTime">
		INSERT INTO WORKTIME_TBL VALUES(#{dateWithId}, #{projectNo}, DEFAULT, #{endWork}, #{userId})
	</insert>

	<update id="addEndTime">
		UPDATE WORKTIME_TBL SET END_WORK = DEFAULT WHERE DATEWITHID = #{dateWithId}
	</update>
	
	<select id="getOneWorkingTime" resultMap="workingTimeResultMap">
		SELECT * FROM WORKTIME_TBL WHERE DATEWITHID = #{dateWithId}
	</select>
	
	<select id="getTeamWorkingTime" resultMap="workingTimeResultMap">
		SELECT * FROM WORKTIME_TBL WHERE DATEWITHID LIKE '%'||#{dataVal}||'%'
	</select>

</mapper>